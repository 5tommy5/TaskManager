@page
@model WebApplication1.Pages.Tasks.CreateModel
@{
    ViewData["Title"] = "Добавление нового задания";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div asp-validation-summary="All"></div>
<form asp-action="AddFile" asp-controller="File" method="post" enctype="multipart/form-data">
    <div><label>Название</label><br /><input name="Name" class="form-control"/></div>
    <div><label>Описание:</label><br /><input name="Description" class="form-control"/></div>
    <div><label>Дедлайн:</label><br /><input type="date" name="Deadline"/></div>
    <div><label>Файл:</label><br /><input type="file" name="AttachedFile" class="form-control" /></div>


    <input type="submit" value="Отправить" />
</form>

